
    <div class="main">
      <div class="container">
        <div class="heading">
          <h2>PROFILE</h2>
        </div>

        <div class="user">
          <%= image_tag @user.gravatar_url, :class => "avatar" %>
          <div class="user-info">
            <h3><span>Username:</span> <%= @user.username %></h3> 
            <h3><span>E-Mail:</span> <%= @user.email %></h3>
            <h3><span>Birthday:</span> <%= @user.birthday %></h3>
            <div>
              <%= link_to "Edit", edit_user_path, :class => "user-buttons" %>
              <a class="user-buttons">Delete</a>
            </div>
          </div>

          <div class="content">

            <% @user.posts.each do |post| %>
              <div class="posts">
                <div class="post">
                  <%= image_tag @user.gravatar_url, :class => "mini-avatar" %>
                  <span><b> <%= @markdown.render(post.title).html_safe() %> </b></span><br>
                  <span><em> <%= @user.username %></em></span>
                  <p><%= @markdown.render(post.content).html_safe() %> </p>
                </div>
              </div>
            <% end %>

            <div class="articles">
          
            </div>
            <div class="game-revs">
          
            </div>
          </div>
        </div>
      </div>
      

