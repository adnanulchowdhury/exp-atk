<div class="main">
  <div class="container">
    <h1>GAMES</h1>

    <%= image_tag 'games.jpg', :class => "jumbotron" %>

    <br><br><br>

    <div class="search-container2">
      <%= form_for game_result_path do %>
        <%= text_field_tag :name, params[:name], class: "searchy", placeholder: "Search for a game..."  %>
        <%= button_tag(type: "submit") do %>
          <i class="search-icon" data-feather="search"></i>
        <% end %>
        
      <% end %>
    </div>

<br><br><br><br>
    <h2 class="center-text"> TOP GAMES </h2>

    <div class="gal">
      <% @top_games.each do |game| %>
        <% if game.name == "IRL" || game.name == "Casino" || game.name == "Talk Shows" || game.name == "Creative" || game.name == "Music" %>
          <% next %>
        <% end %>
        <div class="pic">
          <div class="game-title">
            <%= game.name %>
          </div>
          
          <div class="game-pic">
            <img src= <%= game.box_art_url.gsub("-{width}x{height}","") %> >
          </div>
          
        </div>
      <% end %>
    </div>
    
    </div>
  </div>
  

